<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="check_box_selection"
        android:title="CheckBox"
        android:summaryOn="Checked"
        android:summaryOff="UnChecked"
        android:defaultValue="true"
        />

    <ListPreference
        android:title="List Preference"
        android:summary="radio buttons"
        android:key="color"
        android:defaultValue="@string/pref_entry_value_two"
        android:entries="@array/entry_list"
        android:entryValues="@array/entry_value_list"/>

    <EditTextPreference
        android:numeric="decimal"
        android:inputType="numberDecimal"
        android:defaultValue = "30"
        android:summary="30"
        android:key="size"
        android:title="Text Size"/>

</PreferenceScreen>